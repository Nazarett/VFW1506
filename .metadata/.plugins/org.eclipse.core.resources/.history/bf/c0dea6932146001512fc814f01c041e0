
var win = Ti.UI.createWindow({
	backgroundColor: "#f2f2f2",
	layout: "vertical"
});

var collage = Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory,"pics");

var myPics = collage.getDirectoryListing();

console.log(myPics);

for(var i= 0; i<myPics.length; i++){
	var thePics =Ti.UI.createImageView({
		image: "pics/" + myPics[i],
		width:100,
		top: 30
	});
	
	win.add(thePics);
}




win.open();





