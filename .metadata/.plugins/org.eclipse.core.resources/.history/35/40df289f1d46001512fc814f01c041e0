
var pics = Ti.UI.createWindow({
	backgroundColor: "#f2f2f2",
	layout: "vertical"
});

var collage = Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory,"pics");

var myPics = collage.getDirectoryListing();

console.log(myPics);

for(var i= 0; i<myPics.length; i++){
	var thePics =Ti.UI.createImagesView({
		image: "pics" + myPics[i],
		width:"50%",
		top: 30
	});
	
	pics.add(thePics);
}




pics.open();




