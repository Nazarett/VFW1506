Ti.UI.setBackgroundColor("#000");

var mainScreen = Ti.UI.createWindow({
	title: "Main screen", //Only for android
	backgroundColor: "#fff"
	
});
var myFirstButton = Ti.UI.createView({
	backgroundColor:"orange",
	borderRadius:5,
	borderWidth:3,
	width:120,
	height:40,
	bottom:50,
	left:20
});
var mySecondButton = Ti.UI.createView({
	backgroundColor:"orange",
	borderRadius:5,
	borderWidth:3,
	width:120,
	height:40,
	bottom:50,
	right:20
}); 
mainScreen.add(myFirstButton,mySecondButton);
mainScreen.open();
