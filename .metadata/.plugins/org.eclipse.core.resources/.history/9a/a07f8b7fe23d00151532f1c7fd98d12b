Ti.UI.setBackgroundColor("#000");

var mainScreen = Ti.UI.createWindow({
	//title: "Main screen", //Only for android
	backgroundColor: "#fff"
	
});
var myTopView = Ti.UI.createView({
	backgroundColor:"orange",
	borderRadius:5,
	borderWidth:1,
	height:50,
	top:20
	
});
var myTitle = Ti.UI.createLabel({
	text:"Best Gaming Consoles",
	color:"black",
	font: {fontSize: 16, familyFont: "Helvetica", fontWeight: "bold", fontStyle: "Italic"},
	top:15,
	left:70
	 
});
mainScreen.add(myTopView);
myTopView.add(myTitle);
mainScreen.open();
